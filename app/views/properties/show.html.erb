<p id="notice"><%= notice %></p>

<p>物件名:<%= @property.name %></p>
<p>賃料:<%= @property.price %>円</p>
<p>住所:<%= @property.address %></p>
<p>築年数 <%= @property.age %>年</p>
<p>備考 <%= @property.remark %></p>

<hr>

<% i = 1 %>
<% @near_stations.each do |nearest_station| %>
  <h2>最寄駅<%= i %></h2>
  <p>路線名:<%= nearest_station.line_name %></p>
  <p>駅名:<%= nearest_station.station_name %></p>
  <p>徒歩分数:<%= nearest_station.minutes %>分</p>
  <% i += 1 %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
