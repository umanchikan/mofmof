<p id="notice"><%= notice %></p>

<p>物件名:<%= @property.name %></p>
<p>賃料:<%= @property.price %></p>
<p>住所:<%= @property.address %></p>
<p>築年数 <%= @property.age %></p>
<p>備考 <%= @property.remark %></p>

<h2>最寄駅</h2>
<% @property.near_stations.each do |nearest_station| %>
  <p>路線名:<%= nearest_station.line_name %></p>
  <p>駅名:<%= nearest_station.station_name %></p>
  <p>徒歩分数:<%= nearest_station.minutes %></p>
<% end %>

<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>
